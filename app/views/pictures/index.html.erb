<p id="notice"><%= notice %></p>

<div align="center" style="margin-top:230px;">

<h1>画像一覧</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pictures.each do |picture| %>
      <tr>
        <td><% picture.heart %></td>
        <td><% picture.filename %>
            <% if picture.filename.present? %>
              <br>
              <%= image_tag picture.filename, {:width => '200'} %>
            <% end %>
        </td>
        <td><% link_to '詳細', picture %></td>
        <td><% link_to '変更', edit_picture_path(picture) %></td>
        <td><% link_to '削除', picture, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br><div align="center"><h6><%= link_to '登録画面に戻る', hearts_path %></h6></div>

