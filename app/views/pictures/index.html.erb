<p id="notice"><%= notice %></p>

<div align="center" style="margin-top:230px;">

<h1>画像一覧</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pictures.each do |picture| %>
      <tr>
        <td><%= picture.heart %></td>
        <td><%= picture.filename %>
            <% if picture.filename.present? %>
              <br>
              <%= image_tag picture.filename, {:width => '200'} %>
            <% end %>
        </td>
        <td><%= link_to 'Show', picture %></td>
        <td><%= link_to 'Edit', edit_picture_path(picture) %></td>
        <td><%= link_to 'Destroy', picture, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Picture', new_picture_path %>
