<p id="notice"><%= notice %></p>

<h1>📚 日記</h1>

<table>
  <thead>

  </thead>

  <tbody>
    <% @diaries.each do |diary| %>
      <tr>
        <th>日付</th><td><%= diary.date %></td>
      </tr>
      <tr>
        <th>内容</th><td width="300"><%= diary.comment %></td>
      </tr>
      <tr>
        <th>写真</th><td>
        <% if diary.photo.present? %>
          <%= diary.photo %>
          <br>
          <%= image_tag show_image_diary_path(diary), :width => 100 %>
        <% end %>
        </td>
        <td><%= link_to '見る', diary %></td>
        <td><%= link_to '書き直す', edit_diary_path(diary) %></td>
        <td><%= link_to '消す', diary, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '日記を書く', new_diary_path %>
